{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "clean":{
          "dependsOn": ["^clean"]
        },

        "@iba-cast-gallery/dao#build": {
            "dependsOn": ["clean"]
        },
        "@iba-cast-gallery/db-migaroter#build":{
            "dependsOn": ["clean", "dao#build"]
        },
        "@iba-cast-gallery/db-migrator#migrate:run":{
            "dependsOn": ["build"]
        }
    },
    "globalEnv": [
        "DB_HOST",
        "DB_PORT",
        "DB_USERNAME",
        "DB_PASSWORD",
        "DB_DATABASE",
        "DB_MIGRATION_USER_USERNAME",
        "DB_MIGRATION_USER_PASSWORD"
    ]
}
