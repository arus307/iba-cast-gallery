{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "clean":{
          "dependsOn": ["^clean"]
        },

        "@iba-cast-gallery/dao#build": {
            "dependsOn": ["clean", "@iba-cast-gallery/types#build"],
            "outputs": ["dist/**"]
        },
        "@iba-cast-gallery/dao#migration:create": {
            "dependsOn": ["@iba-cast-gallery/dao#build"]
        },
        "@iba-cast-gallery/dao#migration:generate": {
            "dependsOn": ["@iba-cast-gallery/dao#build"]
        },
        "@iba-cast-gallery/db-migaroter#build":{
            "dependsOn": ["clean", "dao#build"],
            "outputs": ["dist/**"]
        },
        "@iba-cast-gallery/db-migrator#migrate:run":{
            "dependsOn": ["build"]
        },
        "@iba-cast-gallery/types#build": {
            "dependsOn": ["clean"],
            "outputs": ["dist/**"]
        }
    },
    "globalEnv": [
        "DB_HOST",
        "DB_PORT",
        "DB_USERNAME",
        "DB_PASSWORD",
        "DB_DATABASE",
        "DB_MIGRATION_USER_USERNAME",
        "DB_MIGRATION_USER_PASSWORD",
        "DB_SCHEMA",
        "AUTH_SECRET",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "ADMIN_EMAIL",
        "AUTH_URL"
    ]
}